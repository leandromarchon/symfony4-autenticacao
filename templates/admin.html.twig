<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Autenticação com Symfony 4</title>
        <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">
    </head>
    <body>
        <div class="container">
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <div class="row">
                    <div class="col-md-12">
                        <p class="alert alert-secondary text-center">Bem vindo, {{ app.user.username }}</p>
                    </div>
                </div>
            {% endif %}
            <div class="row mt-5">
                <div class="col-md-12">
                    {% if is_granted('ROLE_USER') %}
                        <a href="{{ path('admin') }}" class="btn btn-default">Home</a>
                    {% endif %}
                    {% if is_granted('ROLE_USER') %}
                        <a href="{{ path('dashboard') }}" class="btn btn-default">Dashboard</a>
                    {% endif %}
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('relatorios') }}" class="btn btn-default">Relatórios</a>
                    {% endif %}
                    <a href="{{ path('logout') }}" class="btn btn-default">Logout</a>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    {% block body %}{% endblock %}
                </div>
            </div>
        </div>
    </body>
</html>